    public void Testing(){
    Connection con = MySQL.getConnection();
       String query = "SELECT * FROM `question` WHERE ID_question = "+counter[0];
       Statement st;
       ResultSet rs;
       
       try {
           st = con.createStatement();
           rs = st.executeQuery(query);

           while(rs.next())
           {
               String str =  rs.getString(2);
               testingtext.setText(str);
               
           }

       } 
      catch (Exception e) {
           e.printStackTrace();
       }
    }
    
    public void Answer(){
    Connection con = MySQL.getConnection();
       String query = "SELECT RESULT FROM Answer WHERE ID_question = ? AND ID_answer = ?";
       Statement st;
       ResultSet rs;
       
       try {
           st = con.createStatement();
           rs = st.executeQuery(query);

           while(rs.next())
           {
               String answers =  rs.getString(1);
               
           }

       } 
      catch (Exception e) {
           e.printStackTrace();
       }
       
        
    }
    
