    private void jTable_PanelMouseClicked(java.awt.event.MouseEvent evt) {                                          
        // TODO add your handling code here:
        int i = jTable_Panel.getSelectedRow();

        TableModel model = jTable_Panel.getModel();
        
         // Display Slected Row In JTexteFields
        jTextField_id.setText(model.getValueAt(i,0).toString());

        jTextField_Name.setText(model.getValueAt(i,1).toString());

        jTextField_Type.setText(model.getValueAt(i,2).toString());

        jTextField_Family.setText(model.getValueAt(i,3).toString());
        
        jTextField_Genus.setText(model.getValueAt(i,4).toString());
        
        jTextField_Forest.setText(model.getValueAt(i,5).toString());
        
        jTextField_Month.setText(model.getValueAt(i,6).toString());
                 
    }                                         

    private void jButton_InsertActionPerformed(java.awt.event.ActionEvent evt) {                                               
        // TODO add your handling code here:
        String query = "INSERT INTO `mushrooms`(`Name`, `Type`, `Family`, `Genus`, `Forest`, `Month`) VALUES ('"+jTextField_Name.getText()+"','"+jTextField_Type.getText()+"','"+jTextField_Family.getText()+"','"+jTextField_Genus.getText()+"','"+jTextField_Forest.getText()+"','"+jTextField_Month.getText()+"')";
        executeSQlQuery(query, "Inserted");
    }                                              

    private void jButton_UpdateActionPerformed(java.awt.event.ActionEvent evt) {                                               
        // TODO add your handling code here:
        String query = "UPDATE `mushrooms` SET `Name`='"+jTextField_Name.getText()+"',`Type`='"+jTextField_Type.getText()+"',`Family`='"+jTextField_Family.getText()+"',`Genus`='"+jTextField_Genus.getText()+"',`Forest`='"+jTextField_Forest.getText()+"',`Month`='"+jTextField_Month.getText()+"' WHERE `id` = "+jTextField_id.getText();
        executeSQlQuery(query, "Updated");
    }                                              

    private void jButton_DeleteActionPerformed(java.awt.event.ActionEvent evt) {                                               
        // TODO add your handling code here:
        String query = "DELETE FROM `mushrooms` WHERE id = "+jTextField_id.getText();
        executeSQlQuery(query, "Deleted");
    }                                              

    private void jTextField_SearchActionPerformed(java.awt.event.ActionEvent evt) {                                                  
        // TODO add your handling code here:
    }                                                 

    private void jTextField_SearchKeyTyped(java.awt.event.KeyEvent evt) {                                           
        // TODO add your handling code here:
        jTable_Panel.setModel (new DefaultTableModel(null,new Object[]{"id","Name","Type","Family","Genus","Forest","Month"}));
        tabl.fillMushroomJtable(jTable_Panel, jTextField_Search.getText());
    }                                          

